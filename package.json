{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^3.0.1",
    "tsc": "^2.0.4",
    "typescript": "^5.4.5",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "tsc && nodemon ./dist/src/server.js",
    "test": "tsc && jest --coverage --detectOpenHandles --forceExit",
    "test-prd": "tsc && cross-env NODE_ENV=production DOTENV_CONFIG_PATH='./.env.prod' jest --coverage --detectOpenHandles --forceExit",
    "testAuth": "tsc && jest --detectOpenHandles --forceExit --runInBand ./src/tests/auth.test.ts",
    "testDonation": "tsc && jest --detectOpenHandles --forceExit --runInBand ./src/tests/donation.test.ts",
    "testAdmin": "tsc && jest --detectOpenHandles --forceExit --runInBand ./src/tests/admin.test.ts",
    "testDonor": "tsc && jest --detectOpenHandles --forceExit --runInBand ./src/tests/donor.test.ts",
    "testFile": "tsc && jest --detectOpenHandles --forceExit --runInBand ./src/tests/file.test.ts"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
